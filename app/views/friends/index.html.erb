<h1>Friend List</h1>
<div id="friends">
  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th>User Id</th>
        <th> </th>
      </tr>
    </thead>
    <tbody>
      <% @friends.each do |friend| %>
          <tr>
            <td><%= friend.first_name %></td>
            <td><%= friend.last_name %></td>
            <td><%= friend.email %></td>
            <td><%= friend.phone %></td>
            <td><%= friend.twitter %></td>
            <td><%= friend.user_id %></td>          
            <td><%= link_to "Show", friend, class: "btn btn-outline-danger btn-sm" %></td>
            <td><%= button_to "Delete", friend, method: :delete, class: "btn btn-outline-danger btn-sm" %></td>
          </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>
